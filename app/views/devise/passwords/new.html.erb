<%= render "devise/shared/login_background" %>

<%= render "devise/shared/form_template",
  form_title: "Forgot your password?",
  form_url: password_path(resource_name),
  form_html: { method: :post },
  fields: [
    { name: :email, type: :email, options: { autofocus: true, autocomplete: "email" } }
  ],
  submit_text: "Send me reset password instructions",
  show_remember_me: false,
  show_links: true,
  show_errors: true %>
