<%= render "devise/shared/login_background" %>

<%= render "devise/shared/form_template",
  form_title: "Change your password",
  form_url: password_path(resource_name),
  form_html: { method: :put },
  fields: [
    { name: :password, type: :password, hint: "#{@minimum_password_length} characters minimum", options: { autocomplete: "new-password" } },
    { name: :password_confirmation, type: :password, options: { autocomplete: "new-password" } },
    { name: :reset_password_token, type: :hidden }
  ],
  submit_text: "Change my password",
  show_remember_me: false,
  show_links: true,
  show_errors: true %>
